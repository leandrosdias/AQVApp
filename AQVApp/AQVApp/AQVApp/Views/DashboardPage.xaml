<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AQVApp.Views.DashboardPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pancake="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:prism="http://prismlibrary.com"
    prism:ViewModelLocator.AutowireViewModel="True"
    NavigationPage.HasNavigationBar="False">

    <StackLayout>
        <pancake:PancakeView BackgroundColor="#6C63FF">
            <StackLayout>
                <Label
                    Margin="20,46,0,0"
                    FontFamily="{StaticResource Poppins}"
                    FontSize="28"
                    Text="{Binding HelloString}"
                    TextColor="White" />
                <CollectionView
                    x:Name="cvBubbles"
                    Margin="20,10,10,30"
                    HeightRequest="162"
                    ItemsSource="{Binding Bubbles}">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout ItemSpacing="20" Orientation="Horizontal" />
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <pancake:PancakeView
                                Margin="10,10,10,10"
                                BackgroundColor="White"
                                CornerRadius="15">
                                <StackLayout WidthRequest="200">
                                    <pancake:PancakeView
                                        Margin="20,20,0,0"
                                        BackgroundColor="LightGray"
                                        HorizontalOptions="Start">
                                        <Image Source="{Binding Icon}" />
                                    </pancake:PancakeView>
                                    <Label
                                        Margin="20,20,0,0"
                                        FontSize="30"
                                        HorizontalTextAlignment="Start"
                                        Text="{Binding Title}" />
                                    <Label
                                        Margin="0,10,0,0"
                                        FontSize="15"
                                        HorizontalTextAlignment="Center"
                                        Text="{Binding Description}" />
                                </StackLayout>
                            </pancake:PancakeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>

            </StackLayout>
        </pancake:PancakeView>

        <AbsoluteLayout>
            <Label
                Margin="20,53,0,0"
                FontFamily="{StaticResource Poppins}"
                FontSize="18"
                Text="Minhas Viagens"
                TextColor="#6C63FF" />
            <Label
                Margin="20,68,0,0"
                Text="_________________________"
                TextColor="#DBDBDB" />
        </AbsoluteLayout>

        <pancake:PancakeView
            Margin="0,0,30,30"
            BackgroundColor="#6C63FF"
            CornerRadius="50"
            HeightRequest="56"
            HorizontalOptions="EndAndExpand"
            IsClippedToBounds="True"
            VerticalOptions="EndAndExpand"
            WidthRequest="56">
            <Button
                BackgroundColor="Transparent"
                FontSize="25"
                HorizontalOptions="Center"
                Text="+"
                TextColor="White"
                VerticalOptions="Center" />
        </pancake:PancakeView>
    </StackLayout>
</ContentPage>